### BEGIN INIT INFO
# Provides:          mela-cost-analysis-service
# Required-Start: mysqld
# Required-Stop:
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: Start MELA ComplexCostEvaluationService daemon
# Description:       To start-stop MELA-DS
### END INIT INFO

RUN_MODE="daemons"
. /etc/profile
JAVA=$(which java)
NAME=mela-cost-analysis-service
DAEMONDIR=/opt/mela-cost-analysis-service
DAEMON=MELA-ComplexCostEvaluationService-1.0-SNAPSHOT-war-exec.jar
PIDDIR=/tmp/
PIDFILE=$PIDDIR/mela-cost-analysis-service.pid
MELA_HTTP_PORT=8182
PROFILES=MYSQL
#PROFILES=H2
#PROFILES=PORTABLE
test -x $JAVA -a -f $DAEMONDIR/$DAEMON || echo "test $DAEMONDIR/$DAEMON dod not succed" 
test -x $JAVA -a -f $DAEMONDIR/$DAEMON || exit 0
 
. /etc/init.d/functions

case "$1" in
	start)
		echo "Starting Mela-CostEvaluationService  daemon"
		mkdir -p $LOG_DIR
                cd $DAEMONDIR
                daemon --pidfile=$PIDFILE $JAVA -DLOG_DIR=$LOG_DIR -jar $DAEMON -httpPort $MELA_HTTP_PORT  -Dspring.profiles.active=$PROFILES  > $LOG_DIR/mela-cost-eval.log 2>&1 &
		RETVAL=$?
                echo
		[ $RETVAL = 0 ] && touch /var/lock/mela-cost-analysis-service-daemon
		;;
	stop)
		echo "Stopping Mela-CostEvaluationService  daemon"
		#killproc --pidfile $PIDFILE
		pid=`ps -ef | grep $DAEMON | tr -s ' '  | cut -f2 -d ' ' | head -n 2`
                echo $pid
                sudo kill -9 $pid
		RETVAL=$?
   		echo
                [ $RETVAL = 0 ] && rm -f /var/lock/mela-cost-analysis-service-daemon
 		;;
	restart)
		$0 stop
		sleep 1
		$0 start
		;;
	status)
		pidofproc -p $PIDFILE $JAVA >/dev/null
		status=$?
		if [ $status -eq 0 ]; then
			echo "Mela-CostEvaluationService  is running"
		else
			echo "Mela-CostEvaluationService is not running"
		fi
		exit $status
		;;
	*)
		echo "Usage: $0 {start|stop|restart|status}"
		exit 1
		;;
esac

exit 0

